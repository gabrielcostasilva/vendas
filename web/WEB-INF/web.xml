<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
        
        
<!-- Autenticação -->
    <login-config>
        <auth-method>FORM</auth-method> <!-- BASIC OU FORM, QUANDO FOR FORM VAI SER USADO O FORM-LOGIN-CONFIG -->
        <realm-name>file</realm-name> <!-- file nao usa banco para autenticar, JDBCRealm usa banco para autenticaçao -->		

        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/erro.xhtml</form-error-page>
        </form-login-config>

    </login-config>
    
    <!-- Autorização -->
    <security-role>
        <role-name>venda</role-name> <!-- grupos cadastrados -->
	<role-name>deposito</role-name> <!-- grupos cadastrados -->
        <role-name>administrativo</role-name> <!-- grupos cadastrados -->
        
    </security-role>
    
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Página protegida</web-resource-name> <!-- é um nome qualquer so para identificar o bloqueio -->
            <url-pattern>/faces/gerenciaCliente.xhtml</url-pattern> <!-- pagina que vai ser bloqueada -->
            <url-pattern>/faces/catalogo.xhtml</url-pattern> <!-- pagina que vai ser bloqueada -->
            <url-pattern>/faces/gerenciaVenda.xhtml</url-pattern> <!-- pagina que vai ser bloqueada -->
       </web-resource-collection>
        
        <auth-constraint>
            <role-name>venda</role-name> <!-- grupo do usuario -->
        </auth-constraint>
        

    </security-constraint>
	
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>Página protegida</web-resource-name>
            <url-pattern>/faces/superprotegidas/*</url-pattern>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>teste</role-name>
        </auth-constraint>

    </security-constraint>
        
</web-app>

