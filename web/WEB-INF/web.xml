<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    
    <!-- Autenticação -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        
        <form-login-config>
            <form-login-page>/faces/seguranca/login.xhtml</form-login-page>
            <form-error-page>/faces/seguranca/erro.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <!-- Autorização -->
    <security-role>
        <role-name>administrativo</role-name>
        <role-name>venda</role-name>
        <role-name>deposito</role-name>
    </security-role>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Página protegida administrativo</web-resource-name>
            <url-pattern>/faces/financeiro/*</url-pattern>
            <url-pattern>/faces/estoque/*</url-pattern>
            <url-pattern>/faces/cliente/*</url-pattern>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>administrativo</role-name>
        </auth-constraint>
       
    </security-constraint>
    
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Página protegida venda</web-resource-name>
            <url-pattern>/faces/venda/gerenciavenda.xhtml</url-pattern>
            <url-pattern>/faces/cliente/*</url-pattern>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>venda</role-name>
        </auth-constraint>

    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Página protegida deposito</web-resource-name>
            <url-pattern>/faces/estoque/*</url-pattern>
            
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>deposito</role-name>
        </auth-constraint>

    </security-constraint>
</web-app>
