<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>catalogo</from-outcome>
            <to-view-id>/venda/catalogo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gerenciaCliente</from-outcome>
            <to-view-id>/cliente/gerenciaCliente.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gerenciaFinanceiro</from-outcome>
            <to-view-id>/financeiro/gerenciaFinanceiro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gerenciaVenda</from-outcome>
            <to-view-id>/venda/gerenciaVenda.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gerenciaEstoque</from-outcome>
            <to-view-id>/estoque/gerenciaEstoque.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/seguranca/erro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>retornaInicio</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/template.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>mGC</from-outcome>
            <to-view-id>/cliente/gerenciaCliente.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
